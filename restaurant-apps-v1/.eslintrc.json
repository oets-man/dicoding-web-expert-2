{
    "env": {
        "es2021": true,
        "browser": true
    },
    "ignorePatterns": ["/dist/*.js","karma.conf.js", "webpack*.js", "/specs/*.js"],
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-tabs":0
    }
}
